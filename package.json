{
  "name": "@siddiqus/crony",
  "version": "0.0.0",
  "description": "A NodeJS Cron Client",
  "keywords": [
    "nodejs",
    "cron",
    "cron job",
    "scheduling"
  ],
  "homepage": "https://github.com/siddiqus/node-crony#readme",
  "bugs": {
    "url": "https://github.com/siddiqus/node-crony/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Sabbir Siddiqui",
    "email": "sabbir.m.siddiqui@gmail.com"
  },
  "main": "./lib/src/index.js",
  "files": [
    "lib/**/*"
  ],
  "types": "./lib/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/siddiqus/node-crony"
  },
  "scripts": {
    "prebuild": "rimraf lib/*",
    "prerelease": "yarn build",
    "build": "tsc -p tsconfig.json",
    "changelog": "conventional-changelog --config .changelogrc.js -i CHANGELOG.md -s -a",
    "postchangelog": "git add CHANGELOG.md",
    "cz": "git-cz",
    "dev": "microbundle watch",
    "prepack": "yarn run build",
    "release": "./scripts/release.sh",
    "test": "jest",
    "test:cov": "jest --coverage",
    "version": "yarn run changelog",
    "lint": "eslint --fix && prettier src --write",
    "check-deadcode": "ts-prune --ignore src/index.ts -e",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "axios": "1.6.8",
    "cron": "3.1.6",
    "ioredis": "^5.3.2",
    "ms": "2.1.3",
    "redlock": "^5.0.0-beta.2"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.1",
    "@commitlint/config-conventional": "9.1.1",
    "@commitlint/prompt-cli": "9.1.1",
    "@types/jest": "29.5.11",
    "@types/lodash": "4.14.178",
    "@types/ms": "^0.7.34",
    "@types/redlock": "^4.0.7",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "3.6.1",
    "commitizen": "4.1.2",
    "conventional-changelog-cli": "2.0.34",
    "conventional-changelog-conventionalcommits": "4.3.0",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-no-async-array-methods": "0.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-security-node": "1.1.4",
    "eslint-plugin-unused-imports": "3.0.0",
    "husky": "4.2.5",
    "jest": "29.7.0",
    "lint-staged": "10.2.11",
    "microbundle": "0.13.0",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "rimraf": "3.0.2",
    "semantic-release": "^21.0.1",
    "ts-jest": "29.1.1",
    "ts-prune": "0.10.3",
    "typescript": "4.8.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  }
}
